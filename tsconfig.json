{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__", "src/**/__tests__"]
}
